
<h1>Questions</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Attestation</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
    <% if question.user == current_user %>
      <tr>
        <td><%= question.attestation %></td>        
        <td><%= link_to 'Edit', edit_question_path(question), class:"btn btn-dark btn-sm" %></td>
        <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm " %></td>
      </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path, class:"btn btn-primary" %>
<%= link_to 'Back', home_landing_path, class:"btn btn-dark" %>
